for i in $(cut -b 5- /home/jonass/uppmax/install-methods/conda_settings/condamirror.yaml | head -28 |tail -16); do o=/home/jonass/uppmax/install-methods/conda_settings; j=$(echo $i|awk -F '/' '{print $(NF-1)}'); k=$o/condamirror_$j.yaml; head -12 $o/condamirror.yaml | awk -v j="$j" '{if ($0~/mirror_dir/){print $0 j} else if ($0~/local_repo/){print $0 "_" j} else{print $0}}' > $k; echo "  -" $i >> $k; tail -11 $o/condamirror.yaml >> $k;echo "cas-sync -f" $o/condamirror_$j.yaml;echo "cas-merge -f" $o/condamirror_$j.yaml /sw/apps/mc3/latest/rackham/condamirror/$j/delta_pkgs;done
